{
  "name": "vite-react-ts-template",
  "version": "0.1.0",
  "scripts": {
    "dev": "yarn inject_variables vite",
    "build": "tsc && yarn inject_variables && vite build",
    "build:test": "tsc && yarn inject_variables vite build --mode staging && yarn run deletesourcemap",
    "serve": "vite preview",
    "release": "standard-version",
    "release:100": "yarn run standard-version --release-as major",
    "release:010": "yarn run standard-version --release-as minor",
    "release:001": "yarn run standard-version --release-as patch",
    "prerelease:alpha": "yarn run standard-version --prerelease alpha",
    "prerelease:beta": "yarn run standard-version --prerelease beta",
    "prerelease:rc": "yarn run standard-version --prerelease rc",
    "deletesourcemap": "cross-env-shell rm -rf build/assets/*.js.map",
    "inject_variables": "cross-env VITE_PROJECT_NAME=$npm_package_name VITE_SENTRY_RELEASE=$npm_package_version"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@reduxjs/toolkit": "^1.6.1",
    "ahooks": "^2.10.11",
    "antd": "^4.16.13",
    "await-to-js": "^3.0.0",
    "axios": "^0.21.4",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "qs": "^6.10.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "store2": "^2.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/lodash": "^4.14.174",
    "@types/node": "^16.10.1",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@vitejs/plugin-react": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.2.0",
    "husky": "^7.0.2",
    "less": "^4.1.1",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1",
    "typescript": "^4.3.2",
    "vite": "^2.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
